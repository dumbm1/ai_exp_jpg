<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="4.0"
                   ExtensionBundleId="com.wk.ai_exp"
                   ExtensionBundleVersion="0.5.0"
                   ExtensionBundleName="com.wk.ai_exp"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Author><![CDATA[Marat Shagiev]]></Author>
    <Contact mailto="m_js@bk.ru"><![CDATA[m_js@bk.ru]]></Contact>
    <Legal><![CDATA[Legal stuff...]]></Legal>
    <Abstract href="#">
        <![CDATA[
        Batch layers and artbords export to jpeg
        ]]>
    </Abstract>
    <ExtensionList>
        <Extension Id="com.wk.ai_exp.panel" Version="0.5.0"/>
        <Extension Id="com.wk.ai_exp.dialog" Version="0.5.0"/>
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <Host Name="ILST" Version="17.0"/>
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="4.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.wk.ai_exp.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/hostscript.jsx</ScriptPath>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>ai_exp_0.5.0</Menu>
                    <Geometry>
                        <Size>
                            <Height>400</Height>
                            <Width>400</Width>
                        </Size>
                        <MinSize>
                            <Height>350</Height>
                            <Width>350</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>1200</Height>
                            <Width>1200</Width>
                        </MaxSize>
                    </Geometry>
                    <Icons>
                        <Icon Type="Normal">./icons/base-01.png</Icon>
                        <Icon Type="RollOver">./icons/base-01.png</Icon>
                        <Icon Type="Disabled">./icons/base-01.png</Icon>
                        <Icon Type="DarkNormal">./icons/base-01.png</Icon>
                        <Icon Type="DarkRollOver">./icons/base-01.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
        <Extension Id="com.wk.ai_exp.dialog">
            <DispatchInfo>
                <Resources>
                    <MainPath>./dialog.html</MainPath>
                    <CEFCommandLine>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>false</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>ModalDialog</Type>
                    <Menu>ai_exp_dialog</Menu>
                    <Geometry>
                        <Size>
                            <Height>1</Height>
                            <Width>1</Width>
                        </Size>
                        <MinSize>
                            <Height>1</Height>
                            <Width>1</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>1</Height>
                            <Width>1</Width>
                        </MaxSize>
                    </Geometry>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>