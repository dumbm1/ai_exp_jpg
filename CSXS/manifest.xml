<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="4.0"
                   ExtensionBundleId="com.wk.ai_exp_jpg"
                   ExtensionBundleVersion="0.0.1"
                   ExtensionBundleName="com.wk.ai_exp_jpg"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Author><![CDATA[Marat Shagiev]]></Author>
    <Contact mailto="m_js@bk.ru"><![CDATA[m_js@bk.ru]]></Contact>
    <Legal><![CDATA[Legal stuff...]]></Legal>
    <Abstract href="#">
        <![CDATA[
        Batch layers and artbords export to jpeg
        ]]>
    </Abstract>
    <ExtensionList>
        <Extension Id="com.wk.ai_exp_jpg" Version="0.0.1"/>
        <Extension Id="com.wk.ai_exp_jpg.settings" Version="0.0.1"/>
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <Host Name="ILST" Version="17.0"/>
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="4.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.wk.ai_exp_jpg">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/hostscript.jsx</ScriptPath>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>ai_exp_jpg</Menu>
                    <Geometry>
                        <Size>
                            <Height>300</Height>
                            <Width>300</Width>
                            <MinSize>
                                <Height>300</Height>
                                <Width>300</Width>
                            </MinSize>
                            <MaxSize>
                                <Height>300</Height>
                                <Width>300</Width>
                            </MaxSize>
                        </Size>
                    </Geometry>
                    <Icons>
                        <Icon Type="Normal">./icons/iconNormal.png</Icon>
                        <Icon Type="RollOver">./icons/iconRollover.png</Icon>
                        <Icon Type="Disabled">./icons/iconDisabled.png</Icon>
                        <Icon Type="DarkNormal">./icons/iconDarkNormal.png</Icon>
                        <Icon Type="DarkRollOver">./icons/iconDarkRollover.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
        <Extension Id="com.wk.ai_exp_jpg.settings">
            <DispatchInfo>
                <Resources>
                    <MainPath>./settings.html</MainPath>
                    <ScriptPath>./jsx/settings.jsx</ScriptPath>
                </Resources>
                <Lifecycle>
                    <AutoVisible>false</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>ModalDialog</Type>
                    <Geometry>
                        <Size>
                            <Height>550</Height>
                            <Width>800</Width>
                        </Size>
                    </Geometry>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>